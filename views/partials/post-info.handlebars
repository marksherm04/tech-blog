<div class="card mb-6">
	<header class="card-title">
		<div class="column">
			<a href="/post/{{id}}">{{title}}</a>
		</div>
		<div class="username-post">
			Posted By: {{user.username}} on {{format_date created_at}}
		</div>
	</header>
	<div class="card-body mb-6 text-primary">
		<p class="card-text">{{post_content}}</p>
	</div>
	
</div>
<article class="post">
		<div>
			<a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comment.length}}</a>
		</div>
	</article>